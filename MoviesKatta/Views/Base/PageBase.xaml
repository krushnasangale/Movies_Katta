<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.PrefersHomeIndicatorAutoHidden="True"
             xmlns:baseControls="clr-namespace:MoviesKatta.ViewControls.Common"
             xmlns:controls="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             xmlns:core="clr-namespace:DevExpress.Maui.Core;assembly=DevExpress.Maui.Core"
             x:Class="MoviesKatta.Views.Base.PageBase">

    <Grid IgnoreSafeArea="True" Padding="10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="{OnPlatform Android=16, iOS=36, Default=0}"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Error Indicator -->
        <baseControls:ErrorIndicator
            Grid.Row="2"
            IsError="{Binding IsErrorState, Mode=OneWay}"
            ErrorImage="{Binding ErrorImage, Mode=OneWay}"
            ErrorText="{Binding ErrorMessage, Mode=OneWay}"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <Grid x:Name="PageContentGrid"
              IgnoreSafeArea="True">
        </Grid>
        
        <!-- Busy Indicator -->
        <baseControls:LoadingIndicator
            Grid.Row="2"
            IsBusy="{Binding IsBusy, Mode=OneWay}"
            LoadingText="{Binding LoadingText, Mode=OneWay}"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
        
        <!-- Page Header -->
        <Grid
            Grid.Row="1"
            ColumnDefinitions="56,*,56"
            Margin="0,4"
            IgnoreSafeArea="True">

            <!-- Icons for Left Side -->
            <controls:SimpleButton HeightRequest="50" CornerRadius="10"
                               BorderColor="Transparent"
                               BackgroundColor="Transparent"
                               Grid.Column="0" 
                               PressedBorderColor="Transparent">
                <core:DXImage Style="{StaticResource FilledButtonTextImageWhiteDark}"
                              HeightRequest="25"
                              WidthRequest="25"
                              x:Name="HamburgerButton"
                              Source="icnhamburger.png"
                              VerticalOptions="Center"
                              HorizontalOptions="Start">
                </core:DXImage>
            </controls:SimpleButton>
            <!--Clicked="HamburgerButton_Clicked"-->

            <ImageButton
                HeightRequest="25"
                WidthRequest="25"
                x:Name="NavigateBackButton"
                Source="icnback.png"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                Grid.Column="0"
                Command="{Binding NavigateBackCommand, Mode=OneWay}" />

            <ImageButton
                HeightRequest="25"
                WidthRequest="25"
                x:Name="CloseButton"
                Source="icnclose.png"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                Grid.Column="0"
                Command="{Binding CloseModalCommand, Mode=OneWay}" />

            <!-- Page Header Label -->
            <Label
                Grid.Column="1"
                x:Name="TitleLabel"
                IsVisible="False"
                FontSize="18"
                VerticalOptions="Center"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                Margin="6,0,6,-1"/>

            <!-- Icons for Right Side -->
            <Grid
                x:Name="PageIconsGrid"
                Grid.Column="2"
                Margin="0,4"
                VerticalOptions="Center"
                HorizontalOptions="End" />

        </Grid>

    </Grid>

</ContentPage>